doctype html
html

  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    title= title

    if stylesheet
      link(rel="stylesheet" href=stylesheet)
      
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.13.13/dist/katex.min.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.2.0/styles/vs.min.css")

    style.
      @page {
        @top-left {
          content: "!{topleft}";
        }
        @top-right {
          content: "!{topright}";
        }
      }


  body
    #content

      h1#title= title

      if subtitle
        p#subtitle= subtitle

      .
        !{content}